<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/trans"
    android:layout_height="match_parent">


    <TextView
        android:layout_marginStart="30dp"
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/dunggeunmo"
        android:text="방 이름"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:id="@+id/roomname_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/createRoom_editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Room Name"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/roomname_text"
        android:background="@drawable/gameroom_chat_back_new"
        android:fontFamily="@font/dunggeunmo"
        />

    <TextView
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/dunggeunmo"
        android:text="게임 모드"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:id="@+id/minNum_text"
        app:layout_constraintTop_toBottomOf="@id/createRoom_editText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Spinner
        android:id="@+id/createRoom_mode_spinner"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:entries="@array/mode_array"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/minNum_text"
        android:background="@drawable/gameroom_chat_back_new"

        />
    <TextView
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/dunggeunmo"
        android:text="최대 인원"
        android:textSize="20dp"
        android:id="@+id/createRoom_max_text"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/createRoom_mode_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Spinner
        android:id="@+id/createRoom_minPpl_spinner"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:entries="@array/minPpl_array"
        android:layout_below="@id/createRoom_mode_spinner"
        app:layout_constraintTop_toBottomOf="@id/createRoom_min_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:background="@drawable/gameroom_chat_back_new"
        />
    <TextView
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/dunggeunmo"
        android:text="최소 인원"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:id="@+id/createRoom_min_text"
        app:layout_constraintTop_toBottomOf="@id/createRoom_maxPpl_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Spinner
        android:id="@+id/createRoom_maxPpl_spinner"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:entries="@array/maxPpl_array"
        app:layout_constraintTop_toBottomOf="@id/createRoom_max_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/gameroom_chat_back_new"
        android:layout_marginTop="5dp"
        />
    <Button
        android:layout_width="100dp"
        android:height="60dp"
        android:id="@+id/createroom_yes"
        android:layout_height="wrap_content"
        android:background="@drawable/roomcreate_yes_back"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="25dp"
        app:layout_constraintTop_toBottomOf="@id/createRoom_minPpl_spinner"
        />

    <Button
        android:layout_width="100dp"
        android:height="60dp"
        android:id="@+id/createroom_no"
        android:layout_height="wrap_content"
        android:background="@drawable/roomcreate_no_back"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="25dp"
        app:layout_constraintTop_toBottomOf="@id/createRoom_minPpl_spinner"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
