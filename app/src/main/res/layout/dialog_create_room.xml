<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/dialog_background"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/createRoom_editText"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Room Name" />

    <TextView
        android:layout_marginStart="30dp"
        android:layout_width="match_parent"
        android:layout_height="10sp"
        android:layout_below="@id/createRoom_editText"
        android:layout_above="@id/createRoom_mode_spinner"
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/dunggeunmo"
        android:text="최소 인원"
        android:textSize="10sp"/>
    <Spinner
        android:id="@+id/createRoom_mode_spinner"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/mode_array"
        android:layout_below="@id/createRoom_editText" />
    <TextView
        android:layout_marginStart="30dp"
        android:layout_width="match_parent"
        android:layout_height="10sp"
        android:layout_below="@id/createRoom_editText"
        android:layout_above="@id/createRoom_mode_spinner"
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/dunggeunmo"
        android:text="최대 인원"
        android:textSize="10dp"/>

    <Spinner
        android:id="@+id/createRoom_minPpl_spinner"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/minPpl_array"
        android:layout_below="@id/createRoom_mode_spinner" />
    <TextView
        android:layout_marginStart="30dp"
        android:layout_width="match_parent"
        android:layout_height="10sp"
        android:layout_below="@id/createRoom_editText"
        android:layout_above="@id/createRoom_mode_spinner"
        android:gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/dunggeunmo"
        android:text="최대 인원"
        android:textSize="10dp"/>
    <Spinner
        android:id="@+id/createRoom_maxPpl_spinner"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/maxPpl_array"
        android:layout_below="@id/createRoom_minPpl_spinner" />

</RelativeLayout>
